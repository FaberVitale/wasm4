{
  "name": "wasm4-runtime",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "build:slim": "vite build --mode 'slim'",
    "build:developer-build": "vite build --mode 'developer-build'",
    "build": "npm run build:slim && npm run build:developer-build",
    "start": "npm run start:developer-build",
    "start:slim": "vite --mode 'slim' 'dist/slim'",
    "start:developer-build": "vite --mode 'developer-build' 'dist/developer-build'",
    "prepare": "npm --prefix '../../devtools/web' i"
  },
  "dependencies": {
    "@types/audioworklet": "0.0.23",
    "@wasm4/web-devtools": "file:../../devtools/web"
  },
  "devDependencies": {
    "@types/node": "^16.11.10",
    "vite": "^2.6.4",
    "rimraf": "3.0.2"
  }
}
